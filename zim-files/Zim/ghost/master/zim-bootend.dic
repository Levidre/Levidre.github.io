Select.installirken
{
	_i = SAORI("saori\fontinstaller","get","INVADER-modified (TrueType)")
	if "%(_i)" == "0"
	{
		"(The modified Invader font isn't installed either. It's the Invader font with some characters in plus. It's not necessary and will be used by this balloon anyway. Do you want it installed?)\n\n[half]\![*]\q[Yes,installallfonts]     \![*]\q[No,installirkenonly]"
	}
	else
	{
		Select.installirkenonly
	}
}

Select.nofont
{
	"(The Irken talks will be locked until it's installed for this user.)\n\n[half]"
	--
	OnFirstBootDialogue
}

Select.installallfonts
{
	_i = SAORI("saori\fontinstaller","install","INVADER-modified (TrueType)",balloonpath + "INVADER-modified.ttf")
	_j = SAORI("saori\fontinstaller","install","Irken Normal (TrueType)",balloonpath + "Irken.ttf")
	if "%(_i)" == "" && "%(_j)" == ""
	{
		"(Fonts installed.)\n\n[half]"
	}
	else
	{
		if "%(_i)" != ""
		{
			"(There has been an issue installing the Invader font : %(_i))\n(You can install it manually with the files in the Invader balloon.)\n"
		}
		if "%(_j)" != ""
		{
			"(There has been an issue installing the Irken font : %(_j))\n(You can install it manually with the files in the Invader balloon. The Irken talks will be locked until it's installed for this user.)\n\n[half]"
			hastranslator = -1
		}
		else
		{
			hastranslator = 0
			"\n[half]"
		}
		
	}
	--
	if username == "TEMPUSER"
	{
		OnFirstBootDialogue
	}
}

Select.installirkenonly
{
	_j = SAORI("saori\fontinstaller","install","Irken Normal (TrueType)",balloonpath + "Irken.ttf")

	if "%(_j)" != ""
	{
		"(There has been an issue installing the Irken font : %(_j))\n(You can install it manually with the files in the Invader balloon. The Irken talks will be locked until it's installed for this user.)\n\n[half]"
		hastranslator = -1
	}
	else
	{
		hastranslator = 0
	}
	--
	if username == "TEMPUSER"
	{
		OnFirstBootDialogue
	}
}
