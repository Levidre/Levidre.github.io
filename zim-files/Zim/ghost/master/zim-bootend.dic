OnFirstBoot
{	
	OnFirstBootStuff
	OnInitBootVariables
	_i = SAORI("saori\fontinstaller","get","Irken Normal (TrueType)")
	if "%(_i)" == "0"
	{
		"\![enter,passivemode]\1\s[-1]\0\s[-1]The Irken font isn't installed. Some dialogues need this font. Do you want it to be installed?\n\n[half]\![*]\q[Yes,installirken]     \![*]\q[No,nofont]"
	}
